extends main

block content
  h1 Top 100 Cryptocurrencies by Market Cap
  table
    thead
      tr
        th Icon
        th Symbol
        th Name
        th Price
        th Change
        th Change%
        th Volume
        th Market Cap 
    tbody
      each crypto in cryptos
        tr
          td
            img(src=`https://s2.coinmarketcap.com/static/img/coins/64x64/${crypto.id}.png` alt=crypto.name)
          td(style='font-size: 18px')= crypto.symbol
          td(style='color: grey; font-size: 12px')= crypto.name
          td= `$${crypto.quote.USD.price.toFixed(2)}`
          td= `$${(crypto.quote.USD.percent_change_24h * crypto.quote.USD.price * 0.01).toFixed(2)}`
          td= `${crypto.quote.USD.percent_change_24h.toFixed(2)}%`
          td= `$${crypto.quote.USD.volume_24h.toLocaleString()}`
          td= `$${crypto.quote.USD.market_cap.toLocaleString()}`
