extends main

block content
  div(style='padding: 20px;')
    if article
      img(src=article.urlToImage alt=article.title style='width: 100%; height: 300px; object-fit: cover;')
      h1= article.title
      p= article.content
      p Source: 
        a(href=article.url) Visit
    else
      p No article found. Please navigate from the articles list to view details.
